<% unless @list.status_code == 6 %>
  <%= provide :title, @list.name %>
  <h2 id='watchedmoviecount'>
  <%= check_movie_counter(@list).html_safe %>
  </h2>

  <h1><%= @list.name %></h1>
  <table class='movie_list'>
    <tr class='movie_status_table_header'>
      <th></th>
      <th>Film</th>
      <th></th>
    </tr>
    <tbody class = 'endless_movie'>
    <%= render :partial => @listpart, :collection => @paginated_list.map { |movie| Tmdb::Movie.new(movie) }, :as => :movie %>
    </tbody>
  </table>
  <%= paginate @paginated_list, remote: true %>
<% else %>
  <title>List not found</title>
  <h2>List not found!</h2>
<% end %>
